<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.RegisterActivity">

    <TextView
        android:id="@+id/textViewRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="REGISTRO"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextEmailRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/editTextNameRegistro"
        app:layout_constraintStart_toStartOf="@+id/editTextNameRegistro"
        app:layout_constraintTop_toBottomOf="@+id/editTextNameRegistro" />

    <EditText
        android:id="@+id/editTextPasswordRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/editTextEmailRegistro"
        app:layout_constraintStart_toStartOf="@+id/editTextEmailRegistro"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmailRegistro" />

    <Button
        android:id="@+id/buttonRegistrarse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Registrarme"
        app:layout_constraintEnd_toEndOf="@+id/editTextPasswordRegistro"
        app:layout_constraintStart_toStartOf="@+id/editTextPasswordRegistro"
        app:layout_constraintTop_toBottomOf="@+id/editTextPasswordRegistro" />

    <EditText
        android:id="@+id/editTextNameRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="@+id/textViewRegistro"
        app:layout_constraintStart_toStartOf="@+id/textViewRegistro"
        app:layout_constraintTop_toBottomOf="@+id/textViewRegistro" />
</androidx.constraintlayout.widget.ConstraintLayout>